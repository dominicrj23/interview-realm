{
  "name": "realm",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.3.2",
    "@testing-library/user-event": "^7.1.2",
    "@types/jest": "^24.0.0",
    "@types/node": "^12.0.0",
    "@types/react": "^16.9.0",
    "@types/react-dom": "^16.9.0",
    "body-parser": "^1.19.0",
    "debug": "^4.1.1",
    "express": "^4.17.1",
    "morgan": "^1.10.0",
    "nodemon": "^2.0.4",
    "npm-run-all": "^4.1.5",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-scripts": "3.4.1",
    "typescript": "~3.7.2"
  },
  "scripts": {
    "lint": "eslint --ext js,ts,jsx,tsx src/ server/",
    "start": "npm-run-all -p start:*",
    "start:server": "nodemon --watch server ./bin/www",
    "start:web": "react-scripts start",
    "build": "react-scripts build",
    "test:server": "jest server/",
    "test": "react-scripts test",
    "eject": "react-scripts eject"
  },
  "eslintConfig": {
    "extends": [
      "./eslint.config.json",
      "plugin:prettier/recommended"
    ],
    "overrides": [
      {
        "files": "src/**",
        "extends": [
          "react-app",
          "prettier/react"
        ]
      }
    ]
  },
  "prettier": {
    "semi": true,
    "singleQuote": true,
    "trailingComma": "none",
    "proseWrap": "always",
    "jsxBracketSameLine": true,
    "bracketSpacing": true,
    "arrowParens": "avoid",
    "useTabs": false,
    "tabWidth": 4,
    "jsxSingleQuote": true
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "eslint": "^6",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.3",
    "prettier": "^2.0.5"
  }
}
